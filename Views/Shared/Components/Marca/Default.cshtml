@model List<MarcaMinimo>
@{
    byte tipoVista = (byte)ViewData["TipoVista"];

}


<div class="form-group">
    <select class="form-control @(tipoVista!=1?"form-control-sm":" ")">
        <option value="0">Marcas - Todas</option>
        @{
            if (Model?.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <option value="@item.MarcaId">
                        @Html.Raw(item.Nombre)
                    </option>
                }
            }
        }
    </select>
</div>


