
@{
    ViewData["Title"] = "Principal";

    Layout = "~/Views/Shared/_LayoutSoporte.cshtml";

    String infoEquipo = "";
    if (ViewData.ContainsKey("InfoEquipoUsuario"))
    {
        infoEquipo = (String)ViewData["InfoEquipoUsuario"];
    }
}


@section Estilos
{
    <style>

        .altoTarjeta {
            min-height: 220px;
        }

        @@media screen and (max-width:480px) {
            .margenArriba {
                margin-top: 10px;
            }
        }


        .responsive-estadistica {
            position: relative;
            padding-bottom: 56.25%;
            padding-top: 60px;
            overflow: hidden;
        }

            .responsive-estadistica iframe,
            .responsive-estadistica object,
            .responsive-estadistica embed {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
    </style>

}


<div class="d-flex  bd-highlight">


    <h3 class="float-left ml-2">Módulo Soporte</h3>


    <div class=" ml-auto p-2 bd-highlight">



        <!-- Default dropleft button -->
        <div class="btn-group dropleft ">
            <button type="button" class="btn  btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-bars fa-1x"></i>
            </button>
            <div class="dropdown-menu">

                <a class="dropdown-item  cursor-pointer" asp-area="Soporte" asp-action="NuevoSoporteCaso" asp-controller="Soporte">
                    <i class="fas fa-plus-circle"></i> Nuevo Caso
                </a>
                <a class="dropdown-item  cursor-pointer" asp-area="Soporte" asp-action="CrubContacto" asp-controller="Contacto">
                    <i class="fas fa-user-plus"></i> Nuevo Contacto
                </a>
            </div>
        </div>



    </div>

</div>

<hr />

<div class="row">

    <div class="col-12 col-sm-6 col-md-4 col-lg-3 margenArriba">
        <div class="card border-dark   text-center altoTarjeta">
            <div class="card-body">
                <h4 class="card-title">Casos</h4>
                <p class="card-text">
                    Se listan los Casos y sus Tareas, [AM] Casos y Tareas.
                </p>

            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-area="Soporte" asp-controller="Soporte" asp-action="ListarSoporte" asp-route-vista="1">
                    <i class="far fa-clipboard fa-2x"></i>
                </a>
            </div>
        </div>
    </div>


    <div class="col-12 col-sm-6 col-md-4 col-lg-3 margenArriba">
        <div class="card  border-dark text-center altoTarjeta">
            <div class="card-body">
                <h4 class="card-title">Tareas</h4>
                <p class="card-text">
                    Se listan las Tareas, por defecto las del usuario actual.
                </p>

            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-area="Soporte" asp-controller="Soporte" asp-action="ListarSoporte" asp-route-vista="2">
                    <i class="far fa-calendar-alt fa-2x"></i>
                </a>
            </div>
        </div>
    </div>


    <div class="col-12 col-sm-6 col-md-4 col-lg-3 margenArriba">
        <div class="card border-dark  text-center altoTarjeta">
            <div class="card-body">
                <h4 class="card-title">Contactos</h4>
                <p class="card-text">
                    Listado de contactos de los clientes
                </p>

            </div>

            <div class="card-footer">
                <a class="btn btn-primary"
                   asp-area="Soporte"
                   asp-controller="Contacto"
                   asp-action="ListarContactos">
                    <i class="fas fa-phone-alt fa-2x"></i>
                </a>
            </div>
        </div>
    </div>


    <div class=" col-12 col-sm-6 col-md-4 col-lg-3 margenArriba">
        <div class="card border-dark  text-center altoTarjeta">
            <div class="card-body">
                <h4 class="card-title">Agenda</h4>
                <p class="card-text">
                    Se muestran los eventos asignados en la agenda del técnico.
                </p>

            </div>
            <div class="card-footer">
                <a class="btn btn-primary"
                   asp-area="Soporte"
                   asp-controller="Soporte"
                   asp-action="ListarEventos">
                    <i class="far fa-clock fa-2x"></i>
                </a>
            </div>
        </div>
    </div>


