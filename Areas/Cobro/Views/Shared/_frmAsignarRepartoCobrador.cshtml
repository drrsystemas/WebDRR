@model AsignarNumeroReparto

@{
String urlAction = Url.Action("AsignarNumeroRepartoCobrador", "Cobro");
}

<div class="modal fade"
     id="frm-venta-numero-reparto-cobrador"
     tabindex="-1"
     role="dialog"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="id-titulo">Asignar N° Reparto - Cobrador</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                <div class="container">
                    <form id="frm-asignar-numerito" class="form-horizontal" method="post" asp-controller="Cobro" asp-action="AsignarNumeroRepartoCobrador">
                        <fieldset>

                            <div class="form-group">
                                <label>N° Reparto</label>
                                <input type="text" class="form-control" asp-for="Numero" id="txt-numero-reparto" placeholder="Ingrese el numero">
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>


                        </fieldset>
                    </form>

                </div>

            </div>

            <div class="modal-footer">

                @*<a id="id-venta-lista-precio-btn-aceptar" onclick="frmGuardarNumeroReparto('@urlAction')" class="btn btn-success">Aceptar</a>*@

                <a id="id-venta-lista-precio-btn-aceptar" onclick="enviar()" class="btn btn-success">Aceptar</a>

                <button type="button" class="btn btn-secondary" onclick="frmCerrarNumeroReparto()" data-dismiss="modal">Cancelar</button>
            </div>

        </div>

    </div>

</div>