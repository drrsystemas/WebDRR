
@model List<ViewColector>

@{
    String urlAction = Url.Action("SeleccionarProducto", "Colector");
}

<div class="modal fade" id="frm-seleccionar-producto" tabindex="-1"
     role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">


    <div class="modal-dialog" role="document">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="frm-seleccionar-producto-titulo">Lista de productos</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">

                <div class="container">



                    @{
                        if (Model?.Count() > 0)
                        {
                            for (int i = 0; i < Model.Count(); i++)
                            {
                                ViewColector item = Model.ElementAt(i);

                                String dato = $"[{item.CodigoId}] - ({item.RubroCodigo}) - {item.Descripcion}";
                                <div class="@(i.EsPar() == true ? "filas-colector-producto-par" : "")">
                                    <p class="d-flex flex-row mb-1 font-weight-bold">@item.CodigoBarra</p>
                                    <p class="d-flex flex-row m-0 font-italic">@dato</p>
                                    <p class="d-flex flex-row m-0 font-italic mx-auto justify-content-end">
                                        <button onclick="selecionarProductoColector('@item.CodigoId','@item.CodigoBarra','@item.Descripcion','@urlAction')" class="btn btn-sm btn-light"> <span class="text-primary">Selec.</span>  </button>
                                    </p>
                                </div>

                            }

                        }
                        else
                        {
                            <p class="text-danger">No se encontro el producto buscado.</p>

                        }

                    }





                </div>
                        

            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>




    </div>




</div>