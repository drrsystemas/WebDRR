@model LibreriaBase.Areas.Acceso.CrearCuenta

@{
    ViewData["Title"] = "Crear Cuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



    <div class="container p-4">

        <partial name="_aviso" />

        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Crear Cuenta de Usuario</h3>
                    </div>
                    <br />
             
                    <br />
                    <div class="card-body">
                        <form method="post" asp-area="Acceso" asp-controller="Acceso" asp-action="RegistroUsuario">


                            <div class="form-group">
                                <input type="text" placeholder="N° de documento" class="form-control"
                                       asp-for="@Model.Documento">
                                <span asp-validation-for="@Model.Documento" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="text" placeholder="Nombre y Apellido" class="form-control"
                                       asp-for="@Model.NombreyApellido">
                                <span asp-validation-for="@Model.NombreyApellido" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <input type="text" placeholder="Teléfono/Celular" class="form-control"
                                       asp-for="@Model.Telefono">
                                <span asp-validation-for="@Model.Telefono" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="@Model.CorreoElectronico" placeholder="Correo Electronico" class="form-control" />
                                <span asp-validation-for="@Model.CorreoElectronico" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="@Model.Contraseña" placeholder="Crear contraseña para su cuenta" class="form-control" />
                                <span asp-validation-for="@Model.Contraseña" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="@Model.ContraseñaVerificacion" placeholder="Repita la contraseña ingresada en el campo anterior" class="form-control" />
                                <span asp-validation-for="@Model.ContraseñaVerificacion" class="text-danger"></span>
                            </div>


                            <br />

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Aceptar</button>
                            </div>


