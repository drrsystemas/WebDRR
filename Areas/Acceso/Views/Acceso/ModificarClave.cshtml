
@model LibreriaBase.Clases.DatosUsuario

@{
    ViewData["Title"] = "Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //por ahora asi.
    Boolean representada = false;

    if (ViewData.ContainsKey("representada"))
    {
        representada=(Boolean)ViewData["representada"];
    }
}

@section Estilos
{
    <style type="text/css">
    </style>
}



<div class="container p-4">

    <partial name="_aviso" />

    <div class="row">

        <div class="col-md-4 mx-auto">

            <div class="card text-center">

                <div class="card-header">
                    <div class="row">
                        <div class="col-2">
                            <i class="fas fa-sign-in-alt fa-2x"></i>
                        </div>
                        <div class="col-10 text-left">
                            <h4>Modificar Clave</h4>
                        </div>
                    </div>
                </div>


                <div class="card-body">
                    <form id="frmIngreso" method="post" asp-area="Acceso" asp-controller="Acceso" asp-action="Ingreso">

                        <div class="form-group">
                            <input  type="password"  id="txtClave" asp-for="Clave" placeholder="Clave" class="form-control" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="password" id="txtClaveVerificacion" asp-for="ClaveVerificacion" placeholder="Verificacion" class="form-control" />
                            <span asp-validation-for="ClaveVerificacion" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                        </div>



                        @* Si al procesar se produce un error tiene que mostrar el msj. *@
                        <p class="text-danger">@ViewBag.ErrorMessage</p>

                    </form>

                </div>
                <div class="card-footer">

                    <a class="btn btn-secondary btn-block mb-1" asp-area="Usuario"
                       asp-controller="Panel" asp-action="EditarDatos">Cerrar</a>



                </div>
            </div>



            <br />
            <span @ViewBag.info class="text-danger"></span>
        </div>
    </div>
</div>

<br />
<br />
<br />


@section Scripts
{
    <script type="text/javascript" src="~/script/ingreso/ingreso.js"></script>


    <script type="text/javascript">

    </script>
}