@model ViewCliente

@{
    String urlAtras = (string)ViewData["UrlAtras"];

    String view = "";

    if(ViewData.ContainsKey("View"))
    {
        view = (string)ViewData["View"];
    }
}

<form asp-area="Usuario"
      asp-controller="Cliente"
      asp-action="AgregarCliente_Carrito"
      method="post">
    <input type="hidden" name="urlatras" value="@urlAtras" />
    <input type="hidden" name="ClienteID" value="@Model.ClienteID" />
    <input type="hidden" name="NroClienteAsignado" value="@Model.NroClienteAsignado" />
    <input type="hidden" name="ListaPrecID" value="@Model.ListaPrecID" />
    <input type="hidden" name="ListaPrecID_Nombre" value="@Model.ListaPrecID_Nombre" />
    <input type="hidden" name="DescuentoUno" value="@Model.DescuentoUno" />
    <input type="hidden" name="DescuentoDos" value="@Model.DescuentoDos" />
    <input type="hidden" name="TipoBonificProducto" value="@Model.TipoBonificProducto" />
    <input type="hidden" name="EntidadSucId" value="@Model.EntidadSucId" />
    <input type="hidden" name="RazonSocial" value="@Model.RazonSocial" />
    <input type="hidden" name="NroIdentificacion" value="@Model.NroIdentificacion" />
    <input type="hidden" name="ImpuestoId" value="@Model.ImpuestoId" />
    <input type="hidden" name="EximidoHasta" value="@Model.EximidoHasta" />
    <input type="hidden" name="CategoriaImpuestoID" value="@Model.CategoriaImpuestoID" />
    <input type="hidden" name="CategoriaImpuestoID_Nombre" value="@Model.CategoriaImpuestoID_Nombre" />
    
    
    <span class="card-text p-1">

        @if (view == "")
        {
            <button type="submit"
                    class="btn btn-primary pull-right">
                <i class="fas fa-check"></i>

                <b class="d-none d-sm-inline">
                    Selec.
                </b>
            </button>
        }
        else if (view == "VerCliente")
        {
            <button type="submit"
                    class="btn btn-success pull-right">
                <i class="fas fa-check"></i>

                <span class="d-none d-sm-inline">
                    Seleccionar
                </span>
            </button>
        }

    </span>

</form>