@model LibreriaBase.Areas.Usuario.UsuarioWeb_Configuracion

@{
    ViewData["Title"] = "BuscarDatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Buscar datos en el padrón</h4>

<hr />

<partial name="_aviso" />


<form asp-area="Usuario" asp-controller="Panel" asp-action="BuscarDatos" method="post">
    <div class="form-group row">
        <label asp-for="Documento" class="col-sm-2 col-form-label">N° de Documento</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Documento">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-sm">Consultar</button>
        </div>
    </div>
</form>
<br />
