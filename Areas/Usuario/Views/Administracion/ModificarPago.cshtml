@model LibreriaBase.Areas.Usuario.DatoConfiguracion

@{
    ViewData["Title"] = "ModificarEnvio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h4>Modificar Pago</h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Modificar" asp-controller="Administracion">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @{
                    if (Model.Extra == "Solo Lectura")
                    {
                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label"></label>
                            <input readonly asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label"></label>
                            <input asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    }


                }



                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="1" id="radioActivo" asp-for="Valor">
                    <label class="form-check-label" for="radio4">
                        Activo
                    </label>
                </div>


                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="0" id="radioInactivo" asp-for="Valor">
                    <label class="form-check-label" for="radio5">
                        Inactivo
                    </label>
                </div>



                <input type="hidden" asp-for="Type" class="form-control" />
                <input type="hidden" asp-for="Codigo" class="form-control" />
                <input type="hidden" name="tipo" value="2" class="form-control" />

                <div class="form-group">
                    <br />
                    <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>

    </div>

    @section Scripts{

        <script type="text/javascript">

	$(document).ready(function()
    {
        var valor =parseInt('@Model.Valor');

        if (valor === 0)
        {
            $('#radioInactivo').attr('checked', true);
        }
        else
        {
             $('#radioActivo').attr('checked', true);
        }

    });


        </script>
    }
