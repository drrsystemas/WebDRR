@model LibreriaBase.Areas.Usuario.DatoConfiguracion

@{
    ViewData["Title"] = "ModificarEnvio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Modificar Envío</h4>


<div class="row">
    <div class="col-md-6">
        <form asp-action="Modificar" asp-controller="Administracion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>


            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" value="Activo" id="radioActivo" asp-for="Extra">
                <label class="form-check-label" for="radio4">
                    Activo
                </label>
            </div>


            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" value="Inactivo" id="radioInactivo" asp-for="Extra">
                <label class="form-check-label" for="radio5">
                    Inactivo
                </label>
            </div>


            <input type="hidden" asp-for="Type" class="form-control" />
            <input type="hidden" asp-for="Codigo" class="form-control" />
            <input type="hidden" name="tipo" value="1" class="form-control" />
            <br />
            <br />

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> Guardar</button>
            </div>
        </form>
    </div>
</div>


@section Scripts{

    <script type="text/javascript">

	$(document).ready(function()
    {
        var extra ='@Model.Extra';

        if (extra === "Activo")
        {
            $('#radioActivo').attr('checked', true);
        }
        else
        {
            $('#radioInactivo').attr('checked', true);

        }

    });


    </script>
}