@model IEnumerable<DRR.Core.DBEmpresaEjemplo.Models.Noticia>


<div class="fotorama" data-width="100%" data-height="100">
    @{
        for (int i = 0; i < Model.Count(); i++)
        {
            Noticia item = Model.ElementAt(i);

        <div class="px-2">
            <p class="text-dark m-0">@(item.Fecha.FechaCorta() +" - "+ item.Titulo)</p>
            <p class="mt-1">@(item.Contenido)</p>
        </div>
           
        }
    }
</div>

