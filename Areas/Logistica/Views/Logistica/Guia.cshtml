@model DatosGuiaModel.Guia;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Seguimiento</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3 class="text-primary">Detalle de Guía - N° @Model.NroGuia</h3>
            </div>
            <div class="card-body">
                <br />
                <h4>Cliente: @Model.Cliente</h4>
                <h4>Remitente: @Model.Remitente</h4>
                <h4>N° Remito :@Model.NroRemito</h4>
                <h4>Destinatario: @Model.Destinatario</h4>
                <h4>Fecha: @Model.FechaFormateada(Model.FechaGuia)</h4>




            </div>
        </div>


        <br />
        <br />

        @if (@Model.ListaMovimientos != null)
        {

            <h3 class="text-primary">Cantidad de Movimientos: @Model.ListaMovimientos.Count()</h3>
            <br />

            <div class="row">

                @{
                    int idice = 0;
                }

                @foreach (var mov in Model.ListaMovimientos)
                {
                    idice += 1;

                    <div class="col-md-6">

                        <div class="card">
                            <div class="card-header">
                                <h4>Mov: @idice</h4>
                            </div>
                            <div class="card-body">
                                <h4>Cod. Mov: @mov.Movimiento</h4>
                                <h4>Origén: @mov.Origen</h4>
                                <h4>Destino: @mov.Destino</h4>
                                <h4>Fecha Salida: @Model.FechaFormateada(mov.FechaSale)</h4>
                                <h4>Fecha Llegada: @Model.FechaFormateada(mov.FechaLlega)</h4>
                                <br />
                            </div>
                        </div>

                    </div>

                }

            </div>
            <br />
        }
        else
        {
            <h3 class="bg-primary">No se puedieron cargar los movimientos o no posee movimientos.</h3>
        }

        <br />
        <br />


    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
